    <script src="https://unpkg.com/pell"></script>
    <script>
        function resizeIframe(iframe) {
            try {
                // Ajuste la hauteur à la taille du contenu
                iframe.style.height = iframe.contentWindow.document.body.scrollHeight + 'px';
            } catch (e) {
                console.warn('Impossible de redimensionner l’iframe :', e);
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const textareas = document.getElementsByClassName('pell-target');

            for (let i = 0; i < textareas.length; i++) {
                const textarea = textareas[i];

                const wrapper = document.createElement('div');
                wrapper.classList.add('pell-wrapper');
                textarea.style.display = 'none'; // Cache le textarea
                textarea.parentNode.insertBefore(wrapper, textarea);

                pell.init({
                    element: wrapper,
                    onChange: html => {
                        textarea.value = html; // met à jour le textarea pour Symfony
                    }
                });

                // initialise le contenu
                wrapper.querySelector('.pell-content').innerHTML = textarea.value;
            }
        });
    </script>
