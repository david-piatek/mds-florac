{% extends 'admin.html.twig' %}

{% block title %}NEWS{% endblock %}

{% block body %}
    <h1>NEWS</h1>
    <div class="example-wrapper">
        {{ form_start(form) }}
        <div class="row">
            {% for news in form.news %}
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            {{ form_errors(news) }}
                            {{ form_widget(news) }}
                            <img class="card-img-top" src="{{ asset('asset/image/' ~ news.vars.data.imagePath) }}" alt="Card image cap">
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {{ form_end(form) }}



        <iframe src="{{ path('news') }}"
                width="100%"
                style="min-height: 200px; overflow: hidden;"
                onload="resizeIframe(this)">

        </iframe>
        <br>
        <br>
        <br>
        <hr>
        <button type="button" class="btn btn-danger">Valider preview</button>

        <hr>
    </div>


{% endblock %}
